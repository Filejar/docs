{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Filejar Documentation",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "api": {
    "baseUrl": "https://core-api.filejar.dev",
    "playground": {
      "mode": "simple",
      "disableProxy": true
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "quickstart", "development"]
          },
          {
            "group": "Backend Recipes",
            "pages": [
              "backend-recipes/node/nodejs",
              "backend-recipes/node/express",
              "backend-recipes/node/hono",
              "backend-recipes/node/fastify",
              "backend-recipes/node/nestjs",
              "backend-recipes/node/elysiajs"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "openapi": "api-reference/openapi.json"
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.filejar.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  }
}
